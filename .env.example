# Environment variables for SunLife AI Chatbot
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for embeddings)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# LlamaCpp Server Configuration (optional)
# URL where your local LlamaCpp server is running
LLAMA_CPP_URL=http://localhost:8000/completion

# Database Configuration (optional - defaults to localhost)
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Rails Configuration
RAILS_ENV=development
SECRET_KEY_BASE=your-secret-key-base

